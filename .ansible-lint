exclude_paths:
  - .github/
  - .idea/
  - .vscode/
  - ansible_facts.d/
  - bin/
  - defaults/
  - filter_plugins/
  - library/
  - scripts/
  - inventories/host_vars/

offline: false

mock_modules:
  - cloudflare_dns_records
  - cloudflare_ssl
  - find_open_port
  - migrate_folder
  - qbittorrent_passwd
  - saltbox_facts
  - tld_parse

skip_list:
  - command-instead-of-module
  - command-instead-of-shell
  - ignore-errors
  - latest[git]
  - name[casing]
  - name[template]
  - no-changed-when
  - no-handler
  - package-latest
  - risky-shell-pipe
  - schema[playbook]
  - schema[tasks]
  - var-naming[no-role-prefix]
  - yaml[line-length]
