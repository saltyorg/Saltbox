{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMajorReleases",
    ":ignoreUnstable"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "ignorePaths": [
    "/roles/**"
  ],

  "labels": ["dependencies"],

  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-lint.txt"],
      "groupName": "requirements-lint (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "lint"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-notify.txt"],
      "groupName": "requirements-notify (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "notify"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-saltbox.txt"],
      "groupName": "requirements-saltbox (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "saltbox"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "github-actions"]
    },
    {
      "groupName": "security-updates",
      "groupSlug": "security-updates",
      "matchManagers": ["pip_requirements", "github-actions"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "matchPackagePatterns": [".*"],
      "group": {
        "security": true
      },
      "labels": ["dependencies", "security"]
    }
  ],

  "rebaseWhen": "conflicted"
}