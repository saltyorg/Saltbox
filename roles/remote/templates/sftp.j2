[Unit]
Description=Rclone SFTP Mount
After=network-online.target

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=notify
ExecStartPre=/bin/sleep 10
ExecStart=/usr/bin/rclone mount \
    --allow-other \
{% if (rclone_vfs_cache_dir_lookup | length > 0) and item.vfs_cache.enabled %}
    --cache-dir={{ rclone_vfs_cache_dir_lookup }} \
{% endif %}
    --config={{ rclone_config_path }} \
    --copy-links \
    --dir-cache-time=1m \
    --max-read-ahead=200M \
    --rc \
    --rc-addr=localhost:{{ rclone_remort_port }} \
    --rc-no-auth \
    --syslog \
    --umask=002 \
    --user-agent='{{ user_agent }}' \
{% if item.vfs_cache.enabled %}
    --vfs-cache-max-age={{ item.vfs_cache.max_age | default('504h') }} \
    --vfs-cache-max-size={{ item.vfs_cache.size | default('50G') }} \
    --vfs-cache-mode=full \
    --vfs-cache-poll-interval=1m0s \
    --vfs-fast-fingerprint \
{% endif %}
    -v \
    {{ rclone_remote_with_path + ('/mnt/local' if item.remote == 'feeder' else '') }} /mnt/remote/{{ rclone_remote_name }}
ExecStop=/bin/fusermount3 -uz /mnt/remote/{{ rclone_remote_name }}
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=default.target