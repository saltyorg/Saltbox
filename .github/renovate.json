{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMajorReleases",
    ":ignoreUnstable"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "ansible": {
    "enabled": false
  },

  "labels": ["dependencies"],

  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/*"],
      "groupName": "requirements (major) (pip)",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "pip", "lint"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-docker-controller.txt"],
      "groupName": "requirements-docker-controller (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "docker controller"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-lint.txt"],
      "groupName": "requirements-lint (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "lint"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-notify.txt"],
      "groupName": "requirements-notify (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "notify"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements/requirements-saltbox.txt"],
      "groupName": "requirements-saltbox (pip)",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "pip", "saltbox"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions (major)",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "github-actions"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "github-actions"]
    }
  ],

  "rebaseWhen": "conflicted",

   "vulnerabilityAlerts": {
    "enabled": true
  }
}