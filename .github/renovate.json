{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        ":separateMajorReleases",
        ":ignoreUnstable"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "ansible": {
        "enabled": false
    },
    "baseBranchPatterns": [
        "$default",
        "role-refactor"
    ],
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "description": "Major pip requirements updates",
            "matchManagers": [
                "pip_requirements"
            ],
            "matchFileNames": [
                "requirements/*",
                "resources/roles/dns/files/*"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "dependencies",
                "pip",
                "major"
            ]
        },
        {
            "description": "pip requirements",
            "matchManagers": [
                "pip_requirements"
            ],
            "matchFileNames": [
                "requirements/*",
                "resources/roles/dns/files/*"
            ],
            "groupName": "pip-requirements",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "pip"
            ]
        },
        {
            "description": "Major GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "dependencies",
                "github-actions",
                "major"
            ]
        },
        {
            "description": "GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "github-actions"
            ]
        }
    ],
    "rebaseWhen": "conflicted",
    "vulnerabilityAlerts": {
        "enabled": true,
        "addLabels": [
            "security",
            "vulnerability"
        ]
    },
    "commitMessageAction": "Update",
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": "to {{newVersion}}",
    "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
    "lockFileMaintenance": {
        "enabled": true
    },
    "customManagers": [
        {
            "customType": "regex",
            "description": "Traefik cloudflarewarp plugin",
            "managerFilePatterns": ["roles/traefik/defaults/main.yml"],
            "matchStrings": [
                "plugins\\.cloudflarewarp\\.version=(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
            ],
            "depNameTemplate": "saltyorg/cloudflarewarp",
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "semver"
        },
        {
            "customType": "regex",
            "description": "Traefik themepark plugin",
            "managerFilePatterns": ["roles/traefik/defaults/main.yml"],
            "matchStrings": [
                "plugins\\.themepark\\.version=(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
            ],
            "depNameTemplate": "packruler/traefik-themepark",
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "semver"
        },
        {
            "customType": "regex",
            "description": "Traefik crowdsec bouncer plugin",
            "managerFilePatterns": ["roles/traefik/defaults/main.yml"],
            "matchStrings": [
                "plugins\\.bouncer\\.version=(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
            ],
            "depNameTemplate": "maxlerebourg/crowdsec-bouncer-traefik-plugin",
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "semver"
        }
    ]
}
